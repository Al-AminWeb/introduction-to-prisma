model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  posts Post[]
}

model Post{
  id Int @id @default(autoincrement())
  title String
  content String
  isPublished Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId Int
  author User @relation(fields: [authorId], references: [id])
}